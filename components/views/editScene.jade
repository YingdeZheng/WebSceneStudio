doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/editScene.css')
    link(rel='stylesheet', href='/javascripts/jquery-ui/css/redmond/jquery-ui-1.8.21.custom.css')
  body
    #ui
      #graphicsArea
        canvas#canvas(oncontextmenu="return false;", tabindex="-1",
                      onclick="$('#canvas').focus();")
      #graphicsOverlay
        #toolbar(oncontextmenu="$('#canvas').focus(); return false;",
                      onclick="$('#canvas').focus();")
        #cameraControls(oncontextmenu="$('#canvas').focus(); return false;",
                      onclick="$('#canvas').focus();")
      #searchArea
        h3#searchInputHeader Model Search
        #searchBoxWrapper
          input(type="text", id="searchInputBox")
        button#searchButton Search
        #searchResults.panel
          #searchResultsContents
  include glsl/model.vert.jade
  include glsl/model.frag.jade
  include glsl/constant.vert.jade
  include glsl/constant.frag.jade
  include glsl/picking.vert.jade
  include glsl/picking.frag.jade
  
  //- We pack globalViewData with any render-specific information
  //- that we would like the App to be able to access.
  script(type='text/javascript')
    window.globalViewData = {
        user_name: "#{username}",
        scene_name: "#{scene.name}",
        close_url: "#{close_url}",
    };
  
  script(data-main="/javascripts/main", src="/javascripts/require.js")