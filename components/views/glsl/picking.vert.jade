script(id="picking.vert", type="text/x-vertex").
    #ifdef GL_ES
    precision highp float;
    #endif
    
    uniform mat4 u_mvp;
    uniform mat3 u_model;
    
    attribute vec3 a_position;
    attribute vec3 a_normal;    // Why does the shader break if we don't have/use a_normal??
    
    varying vec3 v_normal;
    
    void main(void)
    {
       v_normal = a_normal;
       gl_Position = u_mvp * vec4(a_position, 1.0);
    }