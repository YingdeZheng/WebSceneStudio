extends layout

block content
    include menubar
    h1= title
    h3 Scene List
    #scene_list
        -for (var i=0; i<scenes.length; i++)
            -var scene = scenes[i]
            form(method='get',
                 action='/scenes/#{username}/#{scene.scene_name}/edit')
                | #{scene.scene_name} 
                button edit
    button#new_scene New Scene

block scripts
  script(src='/javascripts/jquery-ui/js/jquery.validate.min.js')
  script(src='/javascripts/shared/Validator.js')
  script(src='/javascripts/ValidatedDialog.js')
  script
    $(function() {
        $('button').button();
    });